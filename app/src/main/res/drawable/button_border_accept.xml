<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/color_button_ripple">
<item android:id="@android:id/mask">
    <shape android:shape="rectangle">
        <solid
            android:color="@color/color_button_ripple"/>
        <stroke android:width="4px" android:color="@color/color_button_ripple" />
    </shape>
</item>

<item android:id="@android:id/background">
    <shape android:shape="rectangle">
        <gradient
            android:angle="90"
            android:endColor="@color/white"
            android:startColor="@color/white"
            android:type="sweep" />
        <stroke
            android:width="1px"
            android:color="@color/color_grey"/>
    </shape>
</item>
</ripple>